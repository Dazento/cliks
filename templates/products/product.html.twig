{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block stylesheets %}
<!-- product CSS -->
<link rel="stylesheet" href="{{ asset('assets/css/product.css') }}">
{% endblock %}

{% block body %}
<main>
    <section class="test">
        <div class="container">
            <div class="product">
                <div class="images">
                    <img class="img__slider active" src="/assets/img/product/mainImg/{{ product.mainImage }}"
                        alt="Image du produit">
                    <!-- {% for image in imageList %}
                    <img class="img__slider" src="{{ asset('assets/img/product/mainImg/')}}{{ image }}"
                        alt="Image clavier">
                    {% endfor %} -->
                </div>

                <div class="div-description">
                    <h1>{{ product.name }}</h1>
                    <p class="description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Praesent id
                        dignissim nunc. Nulla ac
                        ullamcorper velit, sed porta est. In hac habitasse platea dictumst. Curabitur laoreet rutrum
                        tortor, ac aliquam neque gravida pellentesque. Ut vitae ipsum erat. Aenean iaculis tincidunt
                        sapien non dictum. Nam sit amet mollis felis. Donec eleifend felis id cursus mollis. Cras quis
                        hendrerit felis. Nunc sollicitudin, sem sed tempor maximus, massa nisi aliquet nisl, sit amet.
                    </p>
                    <!-- <audio controls src="https://www.fesliyanstudios.com/play-mp3/768">
                    </audio> -->
                    <a href="" class="read-more">Voir les détails</a>
                    <p class="price">Price</p>
                    <h2>{{ (product.price / 100)|number_format(2, ',', ' ') }} €</h2>
                    <a href="{{ path('cart_add', {id: product.id}) }}" class="btn btn-dark add-cart">Ajouter au
                        panier</a>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}