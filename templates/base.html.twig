<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
        href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />


    <!-- globals CSS -->
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
    <!-- header CSS -->
    {% if app.request.attributes.get('_route') == 'app_home' %}
    <link rel="stylesheet" href="{{ asset('assets/css/headerTransparent.css') }}">
    {% else %}
    <link rel="stylesheet" href="{{ asset('assets/css/headerDark.css') }}">
    {% endif %}
    {% block stylesheets %}
    {{ encore_entry_link_tags('app') }}
    {% endblock %}

    <!-- Bootstrap Icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<body>
    <header id="header">
        <nav class="nav container">
            <div id="burger-menu">
                <i class="fa-solid fa-bars open"></i>
                <i class="fa-solid fa-xmark close"></i>
            </div>
            <div class="nav-left">
                <a href="{{ path('app_home') }}" class="logo">
                    <i class="bi bi-circle-fill"></i>
                    <h1>Cliks</h1>
                </a>
                <ul id="nav-links">
                    <li><a class="link" href="{{ path('app_home') }}">Accueil</a></li>
                    <li><a class="link" href="{{ path('products_index') }}">Produits</a></li>
                    <li><a class="link" href="{{ path('contact') }}">Contact</a></li>
                    {% if app.user %}
                    {% if 'ROLE_ADMIN' in app.user.roles %}
                    <li><a class="link" href="{{ path('admin') }}">Admin</a></li>
                    {% endif %}
                    {% endif %}
                </ul>
            </div>
            <div class="nav-right">
                <ul class="nav-icon">
                    <li><a href=""><i class="fa-solid fa-magnifying-glass"></i></a></li>
                    {% if app.user %}
                    <li><a href="{{ path('profile_index') }}"><i class="fa-solid fa-user"></i></a></li>
                    {% else %}
                    <li><a href="{{ path('app_login') }}"><i class="fa-solid fa-user"></i></a></li>
                    {% endif %}
                    {% if app.user %}
                    <li><a href="{{ path('cart_index') }}"><i class="fa-solid fa-cart-shopping"></i></a></li>
                    {% else %}
                    <li><a href="{{ path('cart_index') }}"><i class="fa-solid fa-cart-shopping"></i></a></li>
                    {% endif %}
                </ul>
            </div>
        </nav>
    </header>
    {% block body %}{% endblock %}
    <!-- FontAwesome Icon -->
    <script src="https://kit.fontawesome.com/a85a826387.js" crossorigin="anonymous"></script>
    <!-- Main JS -->
    <script src="{{ asset('assets/js/script.js') }}"></script>
    {% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>

</html>