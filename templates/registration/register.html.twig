{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{# block stylesheeets avec le lien Bootstrap #}
{% block stylesheets %}
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
{% endblock %}


{% block javascripts %}
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
{% endblock %}

{% block body %}
    <section class="container my-4">
        <h1>Inscription</h1>

        {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.lastname) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.RGPDConsent) }}

            <button type="submit" class="btn btn-primary my-3">S'inscrire</button>
        {{ form_end(registrationForm) }}
        <p class="form-text">Compte déjà crée ? <a href="{{ path('app_login') }}" class="link-secondary">Se connecter</a></p>
    </section>
{% endblock %}