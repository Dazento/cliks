{% extends 'base.html.twig' %}

{% block title %}Modifier mes informations{% endblock %}

{% block stylesheets %}
<!-- product CSS -->
<link rel="stylesheet" href="{{ asset('assets/css/contact.css') }}">
<link rel="stylesheet" href="{{ asset('assets/css/editUser.css') }}">
{% endblock %}

{% block body %}

<article>
    <div class="container">
        <h1>Modifier mes informations</h1>
        {{ form_start(userForm) }}
        <div class="form-row">
            {{ form_row(userForm.firstname) }}
            {{ form_row(userForm.lastname) }}
        </div>
        {{ form_row(userForm.email) }}
        <button class="btn btn-dark" type="submit">Valider</button>
        {{ form_end(userForm) }}
    </div>
</article>

{% endblock %}