{% extends 'base.html.twig' %}

{% block title %}Cliks - Boutique de clavier custom{% endblock %}

{% block stylesheets %}
<!-- home CSS -->
<link rel="stylesheet" href="{{ asset('assets/css/home.css') }}">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/home.js') }}"></script>
{% endblock %}

{% block body %}
<main>

    <section class="section-slider">
        <div class="slider">
            <img src="{{ asset('assets/img/home/accueil.png') }}" alt="" class="img__slider active">
            <img src="{{ asset('assets/img/home/accueil2.png') }}" alt="" class="img__slider">
            <img src="{{ asset('assets/img/home/accueil3.png') }}" alt="" class="img__slider">
            <div id="next">
                <i class="fas fa-chevron-circle-right"></i>
            </div>
            <div id="prev">
                <i class="fas fa-chevron-circle-left"></i>
            </div>
            <!-- <div class="navigation-visibility">
                <div class="slide-icon active"></div>
                <div class="slide-icon"></div>
                <div class="slide-icon"></div>
            </div> -->
        </div>
    </section>

    <section class="product-section">
        <div class="container">
            <h2>Clavier méchanique</h2>
            <div class="cards">
                {% for product in productList %}
                <div class="card">
                    <a href="/produits/{{ product.slug }}">
                        <img src="/assets/img/product/mainImg/{{ product.mainImage }}" alt="Image clavier">
                        <h3>{{ product.name }}</h3>
                        <p>{{ (product.price / 100)|number_format(2, ',', ' ') }} €</p>
                    </a>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <section class="keycaps-section">
        <div class="container">
            <div class="d-flex justify-content-center title">
                <h2 class="margin-right">keycaps</h2>
                <h2>Switch</h2>
            </div>
            <p class="mt-3">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Accusamus eos ex facere incidunt
                ipsum maiores recusandae reprehenderit voluptate voluptatibus. Enim.</p>
        </div>
    </section>
</main>
{% endblock %}